{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "ServerConfig",
	"type": "object",
	"additionalProperties": false,
	"required": [
		"replayFolderPaths",
		"timeoutTicks",
		"timeoutMs",
		"clientWaitTimeoutMs",
		"clientConnectTimeoutMs",
		"enableTerminalVisualizer"
	],
	"properties": {
		"replayFolderPaths": {
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "string",
				"minLength": 1
			}
		},
		"timeoutTicks": {
			"type": "integer",
			"minimum": 1,
			"maximum": 1000000
		},
		"timeoutMs": {
			"type": "integer",
			"minimum": 1,
			"maximum": 600000
		},
		"clientWaitTimeoutMs": {
			"type": "integer",
			"minimum": 1,
			"maximum": 600000
		},
		"clientConnectTimeoutMs": {
			"type": "integer",
			"minimum": 1,
			"maximum": 600000
		},
		"enableTerminalVisualizer": {
			"type": "boolean"
		}
	}
}